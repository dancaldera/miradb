{
	"name": "mirador",
	"version": "0.1.0",
	"description": "Terminal-based database explorer rewritten in Node.js/TypeScript",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"mirador": "./dist/index.js"
	},
	"scripts": {
		"dev": "bun --watch src/index.tsx",
		"build": "esbuild src/index.tsx --bundle --platform=node --target=node18 --outfile=dist/index.js --format=esm --minify --external:react-devtools-core --external:bun:sqlite",
		"start": "bun dist/index.js",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"lint": "biome lint",
		"lint:fix": "biome lint --write .",
		"format": "biome format",
		"format:fix": "biome format --write .",
		"check": "biome check --write .",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"database",
		"tui",
		"cli",
		"postgresql",
		"mysql",
		"sqlite"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.3.0",
		"clipboardy": "^4.0.0",
		"date-fns": "^3.0.0",
		"ink": "^4.4.1",
		"ink-gradient": "^3.0.0",
		"ink-select-input": "^5.0.0",
		"ink-spinner": "^5.0.0",
		"ink-table": "^3.1.0",
		"ink-text-input": "^5.0.1",
		"immer": "^10.0.3",
		"mysql2": "^3.6.5",
		"nanoid": "^5.0.7",
		"pg": "^8.11.3",
		"react": "^18.2.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/node": "^20.10.6",
		"@types/pg": "^8.10.9",
		"@types/react": "^18.2.46",
		"@vitest/coverage-v8": "^1.1.0",
		"esbuild": "^0.19.11",
		"bun-types": "^1.3.1",
		"typescript": "^5.3.3",
		"vitest": "^1.1.0"
	}
}
